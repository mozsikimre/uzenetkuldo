<Window x:Class="UserInterface.ChatWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UserInterface"
        mc:Ignorable="d"
        Title="ChatWindow" Height="800" Width="360"
        Background="Transparent"
        ResizeMode="NoResize">
    

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <Border CornerRadius="15" Grid.RowSpan="3">
            <Border.Background>
                <LinearGradientBrush>
                    <GradientStop Color="#614385"/>
                    <GradientStop Color="#516395"
                              Offset="1"
                              />
                </LinearGradientBrush>
            </Border.Background>
        </Border>

        <Border CornerRadius="15" Margin="20 20 20 0" Height="120" VerticalAlignment="Bottom">
            <Border.Background>
                <SolidColorBrush Color="#B8B1C1" Opacity="0.5"/>
            </Border.Background>
        </Border>

        <Border CornerRadius="15" Grid.Row="1" Margin="20 20 20 20">
            <Border.Background>
                <SolidColorBrush Color="#B8B1C1" Opacity="0.5"/>
            </Border.Background>
        </Border>

        <Border CornerRadius="15" Grid.Row="2" Margin="20 0 20 20" Height="70" VerticalAlignment="Top">
            <Border.Background>
                <SolidColorBrush Color="#B8B1C1" Opacity="0.5"/>
            </Border.Background>
        </Border>

        <StackPanel>

            <!-- Szöveg: Username -->
            <TextBox x:Name="UsernameTextBox"    
                         FontFamily="Helvetica"
                         FontWeight="Bold"
                         FontSize="24"
                         Background="Transparent"
                         BorderThickness="0"
                         Text="Username"
                         Foreground="White"
                         Width="320"
                         Height="25"
                         Margin="0 20"
                         />

            <TextBox FontFamily="Helvetica"
             FontWeight="Thin"
             FontSize="14"
             Background="Transparent"
             BorderThickness="0"
             x:Name="ActiveTextBox"
             Text=""
             Foreground="White"
             Width="290"
             Height="90"
             Margin="0 25"
             />
            
        </StackPanel>

        <StackPanel Grid.Row="1">
            <TextBox Margin="30 30 30 0"
                     Text=""
                     x:Name="LogTextBox"
                     Height="330"
                     FontFamily="Helvetica"
                     FontWeight="Light"
                     FontSize="16"
                     Background="Transparent"
                     BorderThickness="0"
                     Foreground="Black"
                     />

        </StackPanel>

        <StackPanel Grid.Row="2">
            <TextBox Margin="30 10 30 0"
                     Text=""
                     x:Name="MessageTextBox"
                     Height="50"
                     FontFamily="Helvetica"
                     FontWeight="Light"
                     FontSize="16"
                     Background="Transparent"
                     BorderThickness="0"
                     Foreground="Black"
                     />
            <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0 70">
                <Button x:Name="ConnectButton"
                    Content="Connect"
                    Click="ConnectButton_Click"
                    Width="130"
                    Height="40"
                    Margin="20 0 55 0"
                    />
                <Button x:Name="SendMessageButton"
                        Content="Send"
                        Click="SendMessageButton_Click"
                        Width="130"
                        Height="40"
                        Background="White"
                        />
            </StackPanel>
        </StackPanel>


    </Grid>
</Window>
